<h1>New horario</h1>

<% form_for(@horario) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :Especialidad%><br />
    <%= f.select :nombre_especialidad, Especialidade::TIPOS, {:include_blank => true} %>
    <%= f.text_field :nombre_especialidad %>
  </p>
  <p>
    <%= f.label :Dias %><br />
    <%= f.text_field :dias %>
  </p>
  <p>
    <%= f.label :Horas %><br />
    <%= f.text_field :horas %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', horarios_path %>